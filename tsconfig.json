{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDirs": ["src", "test"],
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
  },
  "types": [
    "@types/node",
    "@types/jest",
    "@types/pg",
    "@types/mongodb",
    "@types/mysql2",
    "@types/sqlite3",
    "@types/ioredis",
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib", "test"],
}
