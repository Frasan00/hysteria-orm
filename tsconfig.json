{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDirs": ["src", "test"],
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
  },
  "types": [
    "node",
    "@types/jest",
    "@types/pg",
    "@types/mongodb",
    "@types/mysql2",
    "@types/sqlite3",
    "@types/ioredis",
  ],
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "test/sql/migrations_sqlite/04_user_address_with_uuid.js", "test/sql/migrations_sqlite/04_user_address_with_bigint.js", "test/sql/migrations_sqlite/03_address_with_uuid.js", "test/sql/migrations_sqlite/03_address_with_bigint.js", "test/sql/migrations_sqlite/02_post_with_uuid.js", "test/sql/migrations_sqlite/02_post_with_bigint.js", "test/sql/migrations_sqlite/01_user_without_pk.js", "test/sql/migrations_sqlite/01_user_with_uuid.js", "test/sql/migrations_sqlite/01_user_with_bigint.js"],
  "exclude": ["node_modules", "lib"],
  "baseUrl": "./src",
  "paths": {
    "@/src/*": ["*"],
    "@/src/cli/*": ["cli/*"],
    "@/src/data_source/*": ["data_source/*"],
    "@/src/drivers/*": ["drivers/*"],
    "@/src/env/*": ["env/*"],
    "@/src/errors/*": ["errors/*"],
    "@/src/no_sql/*": ["no_sql/*"],
    "@/src/sql/*": ["sql/*"],
    "@/src/utils/*": ["utils/*"]
  }
}
