{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "baseUrl": "../../",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}