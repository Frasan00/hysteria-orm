{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDirs": ["src"],
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
  },
  "ts-node": {
    "esm": true,
  },
  "types": [
    "node",
    "@types/jest",
    "@types/pg",
    "@types/mongodb",
    "@types/mysql2",
    "@types/sqlite3",
    "@types/ioredis",
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib", "test"],
}
