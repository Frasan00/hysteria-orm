{
  "name": "hysteria-orm",
  "version": "0.3.2",
  "license": "MIT",
  "description": "Yet another orm for Javascript and Typescript no one asked for",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "require": "./lib/index.cjs",
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./cli": {
      "require": "./lib/cli.cjs",
      "import": "./lib/cli.js",
      "types": "./lib/cli.d.ts"
    }
  },
  "sideEffects": false,
  "repository": "https://github.com/Frasan00/hysteria-orm.git",
  "author": "Frasan00 <francesco.sangiovanni.7@gmail.com>",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "yarn format && yarn build:dev && node lib/index.js",
    "prepare": "husky install",
    "migrate": "node ./test/migration_runner.js",
    "test": "node ./test/test_runner.js",
    "test:with:migrations": "rm -rf sqlite.db && touch sqlite.db && yarn format && yarn build:prod && yarn migrate && node ./test/test_runner.js",
    "format": "prettier --write \"**/*.ts\"",
    "build": "yarn build:prod",
    "build:prod": "tsup --minify --format esm --dts --clean",
    "build:dev": "tsup --sourcemap --format esm --dts",
    "test:fresh": "node lib/cli.js refresh:migrations"
  },
  "bin": {
    "hysteria": "lib/cli.js"
  },
  "devDependencies": {
    "@adonisjs/eslint-config": "^1.3.0",
    "@faker-js/faker": "^9.6.0",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.4.2",
    "@types/mongodb": "^4.0.7",
    "@types/mysql2": "github:types/mysql2",
    "@types/pg": "^8.11.10",
    "@types/pluralize": "^0.0.33",
    "@types/sqlite3": "^3.1.11",
    "husky": "^9.1.7",
    "ioredis": "^5.4.1",
    "jest": "^29.7.0",
    "luxon": "^3.5.0",
    "mongodb": "^6.11.0",
    "mysql2": "^3.11.5",
    "pg": "^8.14.1",
    "prettier": "^3.4.2",
    "sqlite3": "^5.1.7",
    "standard": "^17.1.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "dayjs": "^1.11.13",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.2.2",
    "sql-formatter": "^15.4.8"
  },
  "peerDependencies": {
    "ioredis": "^5.0.0",
    "mongodb": "^6.0.0",
    "mysql2": "^3.0.0",
    "pg": "^8.0.0",
    "sqlite3": "^5.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    },
    "mongodb": {
      "optional": true
    },
    "mysql2": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "sqlite3": {
      "optional": true
    },
    "ts-node": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "keywords": [
    "orm",
    "library",
    "sql",
    "SQL",
    "NoSql"
  ]
}
