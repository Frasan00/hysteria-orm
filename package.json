{
  "name": "hysteria-orm",
  "version": "0.8.4",
  "license": "MIT",
  "description": "Yet another orm for Javascript and Typescript no one asked for",
  "type": "module",
  "repository": "https://github.com/Frasan00/hysteria-orm.git",
  "author": "Frasan00 <francesco.sangiovanni.7@gmail.com>",
  "scripts": {
    "start": "yarn format && yarn build:dev && node lib/index.js",
    "prepare": "husky install",
    "migrate": "node ./test/migration_runner.js",
    "test": "reset && node ./test/test_runner.js",
    "test:with:migrations": "rm -rf sqlite.db && touch sqlite.db && yarn format && yarn build:prod && yarn migrate && node ./test/test_runner.js",
    "format": "prettier --write \"**/*.ts\"",
    "build": "yarn generate:interpreter:map && yarn build:prod",
    "build:prod": "yarn generate:interpreter:map && tsup --minify",
    "build:dev": "tsup",
    "test:fresh": "node lib/cli.js refresh:migrations",
    "generate:interpreter:map": "node generate_interpreter_map.js"
  },
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.cjs",
      "import": "./lib/index.js"
    }
  },
  "bin": {
    "hysteria": "lib/cli.js"
  },
  "devDependencies": {
    "@adonisjs/eslint-config": "^2.1.2",
    "@faker-js/faker": "^9.9.0",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/mongodb": "^4.0.7",
    "@types/mysql2": "github:types/mysql2",
    "@types/pg": "^8.15.5",
    "@types/pino": "^7.0.5",
    "@types/pluralize": "^0.0.33",
    "@types/sqlite3": "^5.1.0",
    "husky": "^9.1.7",
    "ioredis": "^5.7.0",
    "jest": "^30.0.5",
    "luxon": "^3.7.1",
    "mongodb": "^6.18.0",
    "mysql2": "^3.14.3",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "sqlite3": "^5.1.7",
    "standard": "^17.1.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "commander": "^14.0.0",
    "dayjs": "^1.11.13",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.2.2",
    "sql-formatter": "^15.6.6",
    "sql-highlight": "^6.1.0"
  },
  "peerDependencies": {
    "ioredis": "^5.6.1",
    "mongodb": "^6.17.0",
    "mysql2": "^3.14.1",
    "pg": "^8.16.0",
    "sqlite3": "^5.1.7",
    "typescript": "^5.8.3"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    },
    "mongodb": {
      "optional": true
    },
    "mysql2": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "sqlite3": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "keywords": [
    "orm",
    "library",
    "sql",
    "SQL",
    "NoSql"
  ]
}
