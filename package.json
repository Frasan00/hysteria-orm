{
  "name": "hysteria-orm",
  "version": "0.0.17",
  "description": "Yet another orm for javascript and typescript no one asked about",
  "main": "./lib/index.js",
  "repository": "https://github.com/Frasan00/hysteria-orm.git",
  "author": "Frasan00 <francesco.sangiovanni.7@gmail.com>",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "yarn format && yarn build && node lib/index.js",
    "test": "yarn format && yarn build && node test_runner.js",
    "test:complete": "yarn format && yarn build && sh roll_and_run_migrations.sh && node test_runner.js",
    "format": "prettier --write \"**/*.ts\"",
    "build": "tsup",
    "create:migration": "yarn build && ts-node --transpile-only src/hysteria_cli/migration_create_connector.ts",
    "run:migrations": "yarn build && ts-node --transpile-only src/hysteria_cli/migration_run_connector.ts",
    "rollback:migrations": "yarn build && ts-node --transpile-only src/hysteria_cli/migration_rollback_connector.ts",
    "refresh:migrations": "yarn rollback:migrations && yarn run:migrations"
  },
  "bin": {
    "hysteria": "lib/cli.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/eslint-config": "^1.3.0",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.4.2",
    "jest": "^29.7.0",
    "ioredis": "^5.4.1",
    "mongodb": "^6.11.0",
    "mysql2": "^3.11.5",
    "pg": "^8.13.1",
    "sqlite3": "^5.1.7",
    "prettier": "^3.4.2",
    "standard": "^17.1.2",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "luxon": "^3.5.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@types/ioredis": "^5.0.0",
    "@types/mongodb": "^4.0.7",
    "@types/mysql2": "github:types/mysql2",
    "@types/pg": "^8.11.10",
    "@types/sqlite3": "^3.1.11",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "winston": "^3.17.0"
  },
  "keywords": [
    "orm",
    "library",
    "sql",
    "SQL",
    "NoSql"
  ]
}
